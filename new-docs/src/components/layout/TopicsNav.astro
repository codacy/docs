---
import { topicsNav as topics } from '../../config/sidebar.mjs';

const pathname = Astro.url.pathname;

const normalizeHref = (href: string): string => (href.endsWith('/') ? href : `${href}/`);
const normalizePathname = (path: string): string =>
  path === '/' || path.endsWith('/') ? path : `${path}/`;
const matchesTopic = (href: string): boolean => {
  const normalizedHref = normalizeHref(href);
  const normalizedPathname = normalizePathname(pathname);
  return normalizedPathname === normalizedHref || normalizedPathname.startsWith(normalizedHref);
};

const otherTopicMatched = topics.slice(1).some((topic) => matchesTopic(topic.href));
---

<nav class="sl-header-tabs" aria-label="Primary">
  {topics.map((topic, index) => {
    const isActive = index === 0 ? !otherTopicMatched : matchesTopic(topic.href);
      
    return (
      <a href={topic.href} class={isActive ? 'active' : ''}>
        {topic.label}
      </a>
    );
    
  })}
</nav>

<style>
.sl-header-tabs {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    margin: 0;
    margin-inline-start: 0.75rem;
    padding: 0;
    font-size: 0.95rem;
    white-space: nowrap;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
}

.sl-header-tabs::-webkit-scrollbar {
    display: none;
}

.sl-header-tabs a {
    display: inline-flex;
    align-items: center;
    height: 2rem;
    padding-inline: 0.75rem;
    border-radius: 999px;
    color: var(--sl-color-text);
    text-decoration: none;
    border: 1px solid transparent;
    transition: background-color 120ms ease, border-color 120ms ease, color 120ms ease;
}

.sl-header-tabs a:hover {
    background: var(--sl-color-gray-6);
}

.sl-header-tabs a:focus-visible {
    outline: 2px solid var(--sl-color-accent);
    outline-offset: 2px;
}

.sl-header-tabs a.active {
    font-weight: 600;
    border-color: var(--sl-color-gray-5);
    background: var(--sl-color-gray-6);
}
</style>
